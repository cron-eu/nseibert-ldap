{
  "name": "nseibert/ldap",
  "type": "typo3-cms-extension",
  "description": "TYPO3 LDAP extension",
  "keywords": [
    "TYPO3",
    "ldap"
  ],
  "homepage": "https://github.com/nseibert/ldap",
  "support": {
    "issues": "https://github.com/nseibert/ldap/issues"
  },
  "authors": [
    {
      "name": "Norman Seibert",
      "email": "seibert@entios.de",
      "role": "Developer",
      "homepage": "https://www.entios.de/ldap-mit-typo3/"
    }
  ],
  "license": "GPL-2.0+",
  "require": {
    "typo3/cms-core": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "NormanSeibert\\Ldap\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NormanSeibert\\Ldap\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
    }
  },
  "replace": {
    "ldap": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/ldap ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/ldap"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "ldap_3.3"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}

